@model IEnumerable<SchoolManagementSystemWebApp.Models.DTO.CategoriesDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div>
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary" style="float:right;">
                <i class="bi bi-plus-square-fill"></i>
                Create
            </a>

        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>
                    Category Name               
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.CategoryName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@item.CategoryId"> <span id="boot-icon" class="bi bi-pencil-fill" style="font-size: 1.5rem; color: rgb(0, 128, 55);"></span></a>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="#" data-toggle="modal" data-target="#deleteModal_@item.CategoryId">
                                <span id="boot-icon" class="bi bi-trash2-fill" style="font-size: 1.5rem; color: rgb(255, 0, 0);"></span>
                            </a>
                        </div>




                        <!-- Delete Confirmation Modal for each item -->
                        <div class="modal fade" id="deleteModal_@item.CategoryId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item?                               
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@item.CategoryId" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }       
        </tbody>
    </table>
</div>
