@model IEnumerable<SchoolManagementSystemWebApp.Models.DTO.RoleDetailsDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div>
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Role List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Role" asp-action="CreateRole" class="btn btn-primary" style="float:right;">
                <i class="bi bi-plus-square-fill"></i>
                Create
            </a>

        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
          
                <th>
                    Role Name               
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>@item.RoleName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Role" asp-action="UpdateRole" asp-route-roleId="@item.RoleId"> <span id="boot-icon" class="bi bi-pencil-fill" style="font-size: 1.5rem; color: rgb(0, 128, 55);"></span></a>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="#" data-toggle="modal" data-target="#deleteModal_@item.RoleId">
                                <span id="boot-icon" class="bi bi-trash2-fill" style="font-size: 1.5rem; color: rgb(255, 0, 0);"></span>
                            </a>
                        </div>
                        



                                       <!-- Delete Confirmation Modal for each item -->
                    <div class="modal fade" id="deleteModal_@item.RoleId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this item?                               
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <a asp-controller="Role" asp-action="DeleteRole" asp-route-roleId="@item.RoleId" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    </td>
                </tr>
            }       
        </tbody>
    </table>
</div>
