@model SchoolManagementSystemWebApp.VM.UserRegistrationViewModel
@{
    ViewData["Title"] = "User Login Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<form asp-action="UpdateUser">

    <h1 class="text-primary">Update Register</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="/User/IndexUserLogin">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit User Login </li>
        </ol>
    </nav>

    <input hidden asp-for="UserRegistration.UserId" />
    <input hidden asp-for="UserRegistration.registerId" />
  
    <div class="row mt-3">
        <div class="col-md-4 ">
            <div class="form-group">
                <label asp-for="UserRegistration.registerId">Name</label>
                <select asp-for="UserRegistration.registerId" disabled class="form-control" asp-items="@Model.RegisterList">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="UserRegistration.RoleId" class="text-danger"></span>
            </div>

        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label for="userName">User Name</label>
            <input type="text" asp-for="UserRegistration.UserName" class="form-control" />
            <span asp-validation-for="UserRegistration.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-4">
            <label asp-for="UserRegistration.Password">Password</label>
            <input asp-for="UserRegistration.Password" id="passwordInput" class="form-control" />
            <span asp-validation-for="UserRegistration.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-4 ">
            <div class="form-group">
                <label for="role">Role Name</label>
                <select asp-for="UserRegistration.RoleId" class="form-control" asp-items="@Model.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="UserRegistration.RoleId" class="text-danger"></span>
            </div>

        </div>
    </div>


    <div class="row justify-content-center">
    <div class="col-2 text-center">
        <button type="submit" class="btn-lg btn-success" style="margin-left:-337px;margin-top:14px">Update</button>
    </div>
    <div class="col-2 justify-content-end">
        <a asp-action="IndexUserLogin" asp-controller="User" class="btn btn-secondary btn-lg" style="margin-left:-444px;margin-top:15px">Cancel</a>
    </div>
    </div>



</form>


@section Scripts   
    {   
    <partial name="_ValidationScriptsPartial" />
    <script>    // Retrieve the actual password from the model or database and store it in a JavaScript variable       
        var actualPassword = '@Model.UserRegistration.Password';        // Set the value attribute of the password input field to the actual password       
        document.getElementById('passwordInput').value = actualPassword;
    </script>

   

                }

