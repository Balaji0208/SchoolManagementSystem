@model SchoolManagementSystemWebApp.VM.UserPaginationVM
@{
    ViewData["Title"] = "User Login Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

</head>
<body>
    <div>

        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Register User</h1>
                

            </div>
            <div class="col text-end pt-1">
                <a asp-controller="User" asp-action="UserLoginRegister" class="btn btn-primary" style="float:right;"><i class="bi bi-plus-square-fill"></i> Create </a>
            </div>
        </div>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        UserName
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        RoleName
                    </th>
                    <th>
                        Action
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.User)
                {
                    <tr>
                        <td>@item.Register.FirstName</td>
                        <td>@item.UserName</td>
                        <td>********</td>
                        <td>@item.RoleDetails.RoleName</td>

                        @if (item.StatusFlag == true)
                        {
                            <td>

                                <div class="btn-group" role="group">

                                    <a id="activeItem" class="activeItem" data-target="#Activebasic"
                                       data-toggle="modal"
                                       data-path="/User/EnableUser?userId=@item.UserId"><span id="boot-icon">Active</span></a>

                                </div>

                            </td>
                        }
                        else
                        {
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="User" asp-action="UpdateUser" asp-route-userId="@item.UserId"> <span id="boot-icon" class="bi bi-pencil-fill" style="font-size: 1.5rem; color: rgb(0, 128, 55);"></span></a>
                                </div>
                                <div class="btn-group" role="group">

                                    <a id="deleteItem" class="deleteItem" data-target="#Deletebasic"
                                       data-toggle="modal"
                                       data-path="/User/DeleteUser?userId=@item.UserId">
                                        <span id="boot-icon" class="bi bi-trash2-fill" style="font-size: 1.5rem; color: rgb(255, 0, 0);"></span>
                                    </a>

                                </div>


                            </td>
                        }
                    </tr>                    <!-- Delete Confirmation Modal for each item -->
                    

                }





            </tbody>
        </table>
    </div>
   

    
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({ "paging": false });
        });
    </script>


    <nav aria-label="Page navigation example" style="float: right;margin-top: -25px;">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">

                    <a class="page-link" href="/User/IndexUserLogin?orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }           
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item"><a class="page-link active" href="/User/IndexUserLogin?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/User/IndexUserLogin?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>
                }
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/User/IndexUserLogin?orderBy=@Model.OrderBy&currentPage=@Model.CurrentPage+1" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }       
        </ul>
    </nav>

</body>


@section Scripts {
    
    <partial name="_deleteActivePopup" />

}



