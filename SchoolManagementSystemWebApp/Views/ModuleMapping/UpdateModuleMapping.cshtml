@model SchoolManagementSystemWebApp.VM.ModuleMappinVM
@{
    ViewData["Title"] = "User Login Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<form asp-action="UpdateModuleMapping">

    <h1 class="text-primary">Update Module</h1>
   
    <input hidden asp-for="ModuleMapping.RoleMapId" />
    <input hidden asp-for="ModuleMapping.ModuleId" />
  

   
    <div class="row mt-3">
        <div class="col-md-4 ">
            <div class="form-group">
                <label for="role">Role Name</label>
                <select asp-for="ModuleMapping.RoleId" class="form-control" asp-items="@Model.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="ModuleMapping.RoleId" class="text-danger"></span>
            </div>

        </div>
    </div>


    <div class="row justify-content-center">
    <div class="col-2 text-center">
        <button type="submit" class="btn-lg btn-success" style="margin-left:-337px;margin-top:14px">Update</button>
    </div>
    <div class="col-2 justify-content-end">
        <a asp-action="IndexModuleMapping" asp-controller="ModuleMapping" class="btn btn-secondary btn-lg" style="margin-left:-444px;margin-top:15px">Cancel</a>
    </div>
    </div>



</form>


@section Scripts   
    {   
    <partial name="_ValidationScriptsPartial" />
   
   

                }

