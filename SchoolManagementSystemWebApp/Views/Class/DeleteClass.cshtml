@model SchoolManagementSystemWebApp.Models.DTO.ClassMasterDTO
@{   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="RemoveClass">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Remove Class</h1>
        <hr />

        <input hidden asp-for="ClassId" />
        <div class="row">
            <div class="col-2">
                <label asp-for="ClassId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ClassId" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ClassName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ClassName" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexClass" asp-controller="Class" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts   
    {   
    <partial name="_ValidationScriptsPartial" />
                                 }
