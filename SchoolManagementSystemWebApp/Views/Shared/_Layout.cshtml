            </nav>

        }


        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="position:fixed">
            <!-- Brand Logo -->

            <a href="@Url.Action("Index", "Home")" class="brand-link">
                @*<img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">*@
                <span class="brand-text justify-content-center" style="display: flex; justify-content: center; align-items: center; font-weight: bold;">School Management System</span>
            </a>


            <div class="sidebar">


                <!-- Your navigation code -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                        @foreach (var menuItem in Menus.Where(m => m.ParentId == 0))
                        {
                            var urlParts = menuItem.Url.Split('/');
                            if (urlParts.Length >= 3) // Ensure that there are at least three parts (e.g., "/auth/controller")
                            {
                                string controller = urlParts[1]; // Get the controller part
                                string action = urlParts[2];     // Get the action part

                                <li class="nav-item @(currentController == controller || currentAction == action ? "menu-open" : "")">
                                    @if (Menus.Any(m => m.ParentId == menuItem.ModuleId))
                                    {
                                        <a href="#" class="nav-link @(currentController == controller || currentAction == action ? "active" : "")">
                                            <i class="nav-icon fas fa-tree"></i>
                                            <p>
                                                @menuItem.Menus
                                                <i class="fas fa-angle-left right"></i>
                                            </p>
                                        </a>

                                        <ul class="nav nav-treeview">
                                            @foreach (var subMenuItem in Menus.Where(m => m.ParentId == menuItem.ModuleId))
                                            {
                                                var subUrlParts = subMenuItem.Url.Split('/');
                                                if (subUrlParts.Length >= 3)
                                                {
                                                    string subController = subUrlParts[1];
                                                    string subAction = subUrlParts[2];

                                                    <li class="nav-item @(currentController == subController || currentAction == subAction ? "menu-open" : "")">
                                                        <a class="nav-link @(currentController == subController || currentAction == subAction ? "active" : "")" href="@subMenuItem.Url">@subMenuItem.Menus</a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <a class="nav-link @(currentController == controller||currentAction == action  ? "active" : "")" href="@menuItem.Url">
                                            <i class="nav-icon fas fa-tree"></i>
                                            @menuItem.Menus
                                        </a>
                                    }
                                </li>
                            }
                        }


                    </ul>



                </nav>


            </div>

            <!-- /.sidebar -->
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content">

                @RenderBody()


            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

