@model IEnumerable<SchoolManagementSystemWebApp.Models.DTO.SubjectMasterDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container p-4 border mt-4">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Subject List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Subject" asp-action="CreateSubject" class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill"></i>
                Create new Subject
            </a>

        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Subject Id              
                </th>
                <th>
                    Subject Name               
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SubjectId</td>
                    <td>@item.SubjectName</td>
                    <td>
                        <a asp-controller="Subject" asp-action="UpdateSubject" asp-route-roleId="@item.SubjectId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Subject" asp-action="RemoveSubject" asp-route-roleId="@item.SubjectId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }       
        </tbody>
    </table>
</div>
